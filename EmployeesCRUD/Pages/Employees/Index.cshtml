@page
@model EmployeesCRUD.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Lista de Empleados";
}

<h2>Lista de Empleados</h2>

<div class="row mb-3">
    <div class="col-md-6">
        <form method="get">
            <div class="input-group">
                <input type="text" name="SearchString" value="@Model.SearchString" class="form-control" placeholder="Buscar por nombre o correo" />
                <button class="btn btn-outline-primary" type="submit">Buscar</button>
            </div>
        </form>
    </div>
</div>

<p>
    <a asp-page="Create" class="btn btn-primary">Nuevo Empleado</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-route-sortOrder="name_asc">Nombre</a>
                /
                <a asp-route-sortOrder="name_desc">Nombre ↓</a>
            </th>
            <th>
                <a asp-route-sortOrder="email_asc">Correo ↑</a>
                /
                <a asp-route-sortOrder="email_desc">Correo ↓</a>
            </th>
            <th>Área</th>
            <th>
                <a asp-route-sortOrder="date_asc">Fecha ↑</a>
                /
                <a asp-route-sortOrder="date_desc">Fecha ↓</a>
            </th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Department)</td>
                <td>@Html.DisplayFor(modelItem => item.EntryDate)</td>
                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>