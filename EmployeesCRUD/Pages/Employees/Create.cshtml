@page
@model EmployeesCRUD.Pages.Employees.CreateModel
@{
    ViewData["Title"] = "Crear Empleado";
}

<h2 class="text-center mb-4">Crear Nuevo Empleado</h2>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form method="post" class="border p-4 rounded shadow-sm bg-light">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

            <div class="row">
                <!-- Columna izquierda -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Employee.Name" class="form-label"></label>
                        <input asp-for="Employee.Name" class="form-control" />
                        <span asp-validation-for="Employee.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Employee.Email" class="form-label"></label>
                        <input asp-for="Employee.Email" class="form-control" />
                        <span asp-validation-for="Employee.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Employee.Department" class="form-label"></label>
                        <input asp-for="Employee.Department" class="form-control" />
                        <span asp-validation-for="Employee.Department" class="text-danger"></span>
                    </div>
                </div>

                <!-- Columna derecha -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Employee.EntryDate" class="form-label"></label>
                        <input asp-for="Employee.EntryDate" class="form-control" type="date" />
                        <span asp-validation-for="Employee.EntryDate" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3 form-check mt-4 d-flex align-items-center">
                        <input class="form-check-input me-2" asp-for="Employee.IsActive" />
                        <label class="form-check-label" asp-for="Employee.IsActive">
                            @Html.DisplayNameFor(model => model.Employee.IsActive)
                        </label>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2 mt-4">
                <input type="submit" value="Crear" class="btn btn-primary btn-lg" />
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-page="Index" class="text-decoration-none">← Volver al listado</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}